@model HomeBodyViewModel

<div class="govuk-form-group">
    <partial name="_AppErrorSummary" />

    <fieldset class="govuk-fieldset" aria-describedby="form-hint">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">Contact us</h1>
        </legend>
        <p>
            Call @Model.PhoneNumber to speak to an adviser.
        </p>
        <p>
            Due to the Christmas holidays, we're closed on Christmas Day, Boxing Day, Tuesday 27 December, New Year's Day and Monday 2 January.
        </p>
        <p>
            Our usual opening hours are:
        </p>
        <blockquote>
            <ul class="govuk-list govuk-list--bullet">
                <li>
                    <span class="govuk-body govuk-!-font-weight-bold">8am to 8pm</span> Monday to Friday
                </li>
                <li>
                    <span class="govuk-body govuk-!-font-weight-bold">10am to 5pm</span> Saturdays
                </li>
                <li>
                    <span class="govuk-body govuk-!-font-weight-bold">closed</span> Sundays
                </li>
            </ul>
        </blockquote>
        <p class="govuk-body">
            Calls are free from landlines and most mobile numbers. Please check for <a class="govuk-link" href="https://www.gov.uk/call-charges">possible call charges and freephone numbers</a>.
        </p>
        <p class="govuk-body">
            If you do not want to call us, you can also:
        </p>

        @Html.EditorFor(model => model.SelectedOption)

    </fieldset>
    <br />
    <button id="HomeContinueButton" class="govuk-button" data-module="govuk-button">
        Continue
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" focusable="false">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
        </svg>
    </button>
</div>
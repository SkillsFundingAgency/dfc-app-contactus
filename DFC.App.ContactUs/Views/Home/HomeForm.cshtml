@model HomeBodyViewModel

<div class="govuk-form-group">
    <partial name="_AppErrorSummary" />

    <fieldset class="govuk-fieldset" aria-describedby="form-hint">
       @if (Model.SpeakToAnAdviser != null)
{
    <div class="app-related-items">
        @Html.Raw(Model.SpeakToAnAdviser.Content)
    </div>
}
        <p class="govuk-body">
            If you do not want to call us, you can also:
        </p>

            @Html.EditorFor(model => model.SelectedOption)

</fieldset>
    <br />
    <button id="HomeContinueButton" class="govuk-button ncs-button__primary" data-module="govuk-button">
        Continue
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" focusable="false">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
        </svg>
    </button>
</div>
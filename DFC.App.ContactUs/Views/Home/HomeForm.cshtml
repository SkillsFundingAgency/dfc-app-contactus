@model HomeBodyViewModel

<div class="govuk-form-group">
    <partial name="_AppErrorSummary" />

    <fieldset class="govuk-fieldset" aria-describedby="form-hint">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">Contact us</h1>
        </legend>
        <p>
            Call @Model.ServiceOpenDetailModel.PhoneNumber to speak to an adviser. Lines are open from  @Model.ServiceOpenDetailModel.OpenTimesString,  @Model.ServiceOpenDetailModel.OpenDays. Calls are free from landlines and most mobile numbers.
            Find out more about <a href="https://www.gov.uk/call-charges">call charges and freephone numbers</a>.
        </p>
        <p class="govuk-body">
            If you do not want to call us, you can also:
        </p>

        @Html.EditorFor(model => model.SelectedOption)

    </fieldset>
    <br />
    <button id="HomeContinueButton" class="govuk-button" data-module="govuk-button">
        Continue
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
        </svg>
    </button>
</div>
